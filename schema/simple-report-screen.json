{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SimpleReportScreen",
  "type": "object",
  "additionalProperties": false,
  "required": ["opener", "data"],
  "description": "<details>\n<summary>Show example JSON</summary>\n\n```json\n[[include:simple-report-screen.json]]\n```\n</details>",
  "properties": {
    "opener": {
      "type": "string",
      "description": "Used to indicate which section of the browser the dashboard was opened from. This allow the dashboard to show the correct controls",
      "enum": ["menu", "dashboard"]
    },
    "data": {
      "type": "array",
      "description": "The line-items to show to the user for indicating what data the report will send to DuckDuckGo",
      "items": { "$ref":  "#/definitions/SimpleReportScreenDataItem"}
    }
  },
  "definitions": {
    "SimpleReportScreenDataItem": {
      "type": "object",
      "required": ["id"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "title": "DataItemId",
          "type": "string",
          "enum": [
            { "$ref": "#/definitions/wvVersion"},
            { "$ref": "#/definitions/requests"},
            { "$ref": "#/definitions/features"},
            { "$ref": "#/definitions/appVersion"},
            { "$ref": "#/definitions/atb"},
            { "$ref": "#/definitions/category"},
            { "$ref": "#/definitions/description"},
            { "$ref": "#/definitions/errorDescriptions"},
            { "$ref": "#/definitions/extensionVersion"},
            { "$ref": "#/definitions/httpErrorCodes"},
            { "$ref": "#/definitions/lastSentDay"},
            { "$ref": "#/definitions/loginSite"},
            { "$ref": "#/definitions/device"},
            { "$ref": "#/definitions/os"},
            { "$ref": "#/definitions/listVersions"},
            { "$ref": "#/definitions/reportFlow"},
            { "$ref": "#/definitions/siteUrl" }
          ]
        },
        "additional": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": false,
              "required": ["url"],
              "title": "SiteUrlAdditionalData",
              "properties": {
                "url": {
                  "type": "string"
                }
              }
            }
          ]
        }
      }
    },
    "wvVersion": {
      "title": "wvVersion title",
      "const": "wvVersion",
      "description": "wvVersion description"
    },
    "requests":{
      "title": "requests title",
      "const": "requests",
      "description": "requests description"
    },
    "features": {
      "title": "features title",
      "const": "features",
      "description": "features description"
    },
    "appVersion":{
      "title": "appVersion title",
      "const": "appVersion",
      "description": "appVersion description"
    },
    "atb": {
      "title": "atb title",
      "const": "atb",
      "description": "atb description"
    },
    "category":{
      "title": "category title",
      "const": "category",
      "description": "category description"
    },
    "description": {
      "title": "description title",
      "const": "description",
      "description": "description description"
    },
    "errorDescriptions":{
      "title": "errorDescriptions title",
      "const": "errorDescriptions",
      "description": "errorDescriptions description"
    },
    "extensionVersion": {
      "title": "extensionVersion title",
      "const": "extensionVersion",
      "description": "extensionVersion description"
    },
    "httpErrorCodes":{
      "title": "httpErrorCodes title",
      "const": "httpErrorCodes",
      "description": "httpErrorCodes description"
    },
    "lastSentDay": {
      "title": "lastSentDay title",
      "const": "lastSentDay",
      "description": "lastSentDay description"
    },
    "loginSite":{
      "title": "loginSite title",
      "const": "loginSite",
      "description": "loginSite description"
    },
    "device": {
      "title": "device title",
      "const": "device",
      "description": "device description"
    },
    "os":{
      "title": "os title",
      "const": "os",
      "description": "os description"
    },
    "listVersions": {
      "title": "listVersions title",
      "const": "listVersions",
      "description": "listVersions description"
    },
    "reportFlow":{
      "title": "reportFlow title",
      "const": "reportFlow",
      "description": "reportFlow description"
    },
    "siteUrl": {
      "title": "siteUrl title",
      "const": "siteUrl",
      "description": "siteUrl description"
    }
  }
}
