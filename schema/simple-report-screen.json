{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SimpleReportScreen",
  "type": "object",
  "additionalProperties": false,
  "required": ["opener", "data"],
  "properties": {
    "opener": {
      "type": "string",
      "description": "Used to indicate which section of the browser the dashboard was opened from. This allow the dashboard to show the correct controls",
      "enum": ["menu", "dashboard"]
    },
    "data": {
      "type": "array",
      "description": "The line-items to show to the user for indicating what data the report will send to DuckDuckGo",
      "items": { "$ref":  "#/definitions/SimpleReportScreenDataItem"}
    }
  },
  "definitions": {
    "SimpleReportScreenDataItem": {
      "type": "object",
      "required": ["id"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "enum": [
            "wvVersion",
            "requests",
            "features",
            "appVersion",
            "atb",
            "category",
            "description",
            "errorDescriptions",
            "extensionVersion",
            "httpErrorCodes",
            "lastSentDay",
            "loginSite",
            "device",
            "os",
            "listVersions",
            "reportFlow",
            "siteUrl"
          ]
        },
        "additional": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": false,
              "required": ["url"],
              "title": "SiteUrlAdditionalData",
              "properties": {
                "url": {
                  "type": "string"
                }
              }
            }
          ]
        }
      }
    }
  }
}
